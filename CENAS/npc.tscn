var textos_missao := {
	0: \"Mate 10 Almas Vermelhas\",
	1: \"Mate 20 Almas Vermelhas\",
	2: \"Proteja a casa de Edgar\",
	3: \"Mate 15 Almas Vermelhas\",
	4: \"Mate o King SoulRed\"
}

@export var world: WorldManager

func _ready():
	text = \"...\"
	world = $\"../../../../..\"

func _physics_process(_delta):
	# Só mostra durante combate
	if world.state == \"COMBAT\":
		var total = world.limite_inimigos[world.missao_atual]
		text = textos_missao.get(world.missao_atual, \"Missão\") \\
			+ \"\\n\\n\" \\
			+ str(world.inimigos_derrotados) + \" / \" + str(total)
"

